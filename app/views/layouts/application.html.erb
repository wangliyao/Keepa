                  <%= current_user&.email || current_user&.nickname %>
                </a>
                <ul id="menu1" class="dropdown-menu" aria-labelledby="drop4">
                  <li><%= link_to '退出', logout_path%></li>
                </ul>
              <% else %>
                <li><%= link_to '登陆', new_session_path %></li>
                <li><%= link_to '注册', new_user_path%></li>
              <% end %>
