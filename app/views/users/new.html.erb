<style type="text/css">
    body{
    background: url("<%= image_path("background1.jpg")%>");
}
.form{background: rgba(255,255,255,0.2);width:400px;margin:120px auto;}
/*阴影*/
.fa{display: inline-block;top: 27px;left: 6px;position: relative;color: #ccc;}
input[type="text"],input[type="password"]{padding-left:26px;}
.checkbox{padding-left:21px;}
</style>
<%= form_for @user do |f| %>
       <div class="form row body-form">
         <%= flash.notice %>
            <div class="form-horizontal col-md-offset-3" id="login_form">
                <h3 class="form-title">注册</h3>
                <div class="col-md-9">
                    <div class="form-group">
                        <%= f.email_field :email, :class=>"form-control required", placeholder:'邮箱' %>
                    </div>
                    <div class="form-group">
                            <%= f.password_field :password, :class=>"form-control required", placeholder:'密码'  %>
                    </div>
                    <div class="form-group">
                            <%= f.password_field :password_confirmation, :class=>"form-control required", placeholder:'确认密码'  %>
                    </div>
                    <div class="form-group col-md-offset-9">
                        <%=  f.submit '注册', :class=>'btn btn-success pull-right' %>
                    </div>
                </div>
            </div>
        </div>
  <% end %>